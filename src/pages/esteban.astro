---
import Layout from "../layouts/Layout.astro";
---

<Layout title="esteban">
   <div class="d-grid gap-2 col-6 mx-auto">
      <button type="button" class="opacity-50" class="btn btn-secondary">
         PROYECTO ESTEBAN GOMEZ
      </button>
      <h3>AVIACION</h3>
   </div>
   
   <body>
      <h3>
         <div class="shadow p-3 mb-5 bg-body-tertiary rounded">
            El contendio de ese sitio tiene que ver con temas relacionados con
            la aviacion que es en el area el cual trabajo y en el cual desempeno
            una labor muy importante como lo es el mantenimiento de aviones.
         </div>
      </h3>

      <a href="contenido" class="btn btn-outline-danger"  data-bs-toogle="button">
         CONTENIDO</a
      >
      <a href="proyecto" class="btn btn-outline-warning"  data-bs-toogle="button">
         PROYECTO</a
      >
      <a href="nosotros" class="btn btn-outline-success"  data-bs-toogle="button">
         NOSOTROS</a
      >
   </body>
</Layout>
<style>
   button {
      padding-right: 5px;
      text-align: center;
      text-decoration: darkgray;
      margin-bottom: 20px;
      justify-content: baseline;
      -o-animation-fill-mode: both;
   }
</style>